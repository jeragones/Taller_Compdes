extends layout

block content
	form(action="/register" method="post")
		table
			tr
				td
					label(for="txtNombre") Nombre:
				td
					input(id="txtNombre" name="txtNombre" required)
			tr
				td
					label(for="txtUsuario") Usuario:
				td
					input(id="txtUsuario" name="txtUsuario" required)
			tr
				td
					label(for="txtClave") Clave:
				td
					input(id="txtClave" name="txtClave" type="password" required)
			tr
				td
					label(for="txtConfirmar") Confirmar:
				td
					input(id="txtConfirmar" name="txtConfirmar" type="password" title="Volver a escribir su clave" required)
			tr
				td
					label(for="cmbPregunta") Pregunta de seguridad:
				td
					select(id="cmbPregunta" name="cmbPregunta" value="0")
						option(value="1") 多Cual es el nombre de tu primer mascota?
						option(value="2") 多Nombre de su primer profesor de primaria?
						option(value="3") 多Lugar de procedencia de tu madre?
						option(value="4") 多Cual es tu banda preferida?
						
			tr
				td
					label(for="txtRespuesta") Respuesta:
				td
					input(id="txtRespuesta" name="txtRespuesta" required)
			tr
				td
					label(class="error") #{error}
			tr
				td(colspam="2")
					button(id="btnCancelar" class="registro" name="btnCancelar") Cancelar
					button(id="btnRegistrar" class="registro" name="btnRegistrar" value="0") Registrarme